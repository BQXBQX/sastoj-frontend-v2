{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["DOM", "ES2020"],
    "module": "ESNext",
    "jsx": "react-jsx",
    "strict": true,
    "noEmit": false,
    "skipLibCheck": true,
    "isolatedModules": true,
    "resolveJsonModule": true,
    "moduleResolution": "bundler",
    "useDefineForClassFields": true,
    "outDir": "./dist", // 设置输出目录为 dist
    "declaration": true, // 生成 .d.ts 声明文件
    "declarationDir": "./dist", // 确保声明文件放在 dist 目录下
    "esModuleInterop": true, // 允许默认导入非 ES 模块,
    "paths": { "*": ["./@mf-types/*"] }
  },
  "include": ["src"],
  "exclude": ["node_modules", "./rspack.config.ts"],
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS"
    }
  }
}
